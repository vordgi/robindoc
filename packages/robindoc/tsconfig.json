{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib",
    "jsx": "react",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
